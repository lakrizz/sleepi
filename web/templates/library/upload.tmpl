<h1 class="title">Library</h1>
<h2>upload new media</h2>

<form action="/library/add" method="post" enctype="multipart/form-data">

<div class="file">
  <label class="file-label">
    <input type="file" class="file-input" id="songs" accept="audio/*" name="songs" multiple />
    <span class="file-cta">
      <span class="file-icon">
        <i class="fas fa-upload"></i>
      </span>
      <span class="file-label">
        Choose a file
      </span>
    </span>
  </label>
</div>

<div class="field is-grouped">
  <div class="control">
    <button class="button is-link">beam me up</button>
  </div>
</div>

</form>
